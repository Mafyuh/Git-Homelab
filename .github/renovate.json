{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "dependencyDashboard": true,
  "dependencyDashboardTitle": "Renovate Dashboard",
  "labels": ["renovatebot"],
  "docker-compose": {
    "ignorePaths": ["scripts"]
  },
  "hostRules": [
    {
      "matchHost": "docker.io",
      "concurrentRequestLimit": 3
    }
  ],
  "packageRules": [
    {
      "updateTypes": ["digest"],
      "fetchChangeLogs": "pr"
    }
  ]
}